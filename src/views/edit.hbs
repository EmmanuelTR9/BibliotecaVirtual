<div class="container text-center">
  <div class="row text-center">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card text-center">
        <div class="card-body text-center">
          <h1 class="text-dark">Actualizar Libro</h1>
          <div class="text-center"><img src="/img/book.png" width="40%"></div>
          <form action="/tasks/{{task._id}}/edit" method="post">
            <div class="mb-3">
              <input
                class="form-control"
                type="text"
                name="Titulo"
                placeholder="Titulo"
                value="{{task.title}}"
              />
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="description"
                rows="3"
                placeholder="Agregar Descripcion"
              >{{task.description}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="autor"
                rows="3"
                placeholder="Agregar Autor"
              >{{task.autor}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="genero"
                rows="3"
                placeholder="Agregar GÃ©nero"
              >{{task.genero}}</textarea>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control"
                name="editorial"
                rows="3"
                placeholder="Agregar Editorial"
              >{{task.editorial}}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Actualizar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>